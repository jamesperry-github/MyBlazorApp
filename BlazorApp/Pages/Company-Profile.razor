    private async void RePlotChart(ChangeEventArgs e)
    {
        SelectedString = e.Value.ToString();
        switch (SelectedString)
        {
            case "Week":
                    Console.WriteLine("It is definitely: " + SelectedString);
                    candles = await finhub.GetCompanyCandles(Param, ConvertToUnix(DateTime.Now.AddHours(-168)), ConvertToUnix(DateTime.Now));
                    StateHasChanged();
                    return;
            case "Month":
                    Console.WriteLine("It is definitely: " + SelectedString);
                    candles = await finhub.GetCompanyCandles(Param, ConvertToUnix(DateTime.Now.AddHours(-744)), ConvertToUnix(DateTime.Now));
                    StateHasChanged();
                    return;
            case "Year":
                    Console.WriteLine("It is definitely: " + SelectedString);
                    candles = await finhub.GetCompanyCandles(Param, ConvertToUnix(DateTime.Now.AddHours(-8760)), ConvertToUnix(DateTime.Now));
                    StateHasChanged();
                    return;
            default:
                return;
        }
    }

    private void PlotData()
    {
        JS.InvokeVoidAsync("drawTrendlines", candles);
    }

    private long ConvertToUnix(DateTime date)
    {
        long unixTime = ((DateTimeOffset)date).ToUnixTimeSeconds();
        //Console.WriteLine($"{unixTime} is unix time from NOW = {date}");
        return unixTime;
    }

